<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/opacity80Black"
    tools:context=".ui.ChatRoomFragment">

    <ImageButton
        android:id="@+id/chat_room_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@null"
        android:contentDescription="@string/this_is_the_back_button_for_the_chatroom_screen"
        android:src="@drawable/ic_arrow_back_32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/atSymbol"
        style="@style/TitleText"
        android:text="@string/at_symbol"
        app:layout_constraintBottom_toTopOf="@+id/chat_room_list"
        app:layout_constraintEnd_toStartOf="@+id/chat_room_search_view"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/chat_room_back_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chat_room_recipient_tv"
        style="@style/PrimaryText"
        android:layout_width="0dp"
        android:text="@string/user_name_placeholder"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/chat_room_back_btn"
        app:layout_constraintEnd_toStartOf="@+id/chat_room_search_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chat_room_back_btn"
        app:layout_constraintTop_toTopOf="@+id/chat_room_back_btn" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/chat_room_search_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:closeIcon="@drawable/ic_close_24"
        app:layout_constraintBottom_toTopOf="@+id/chat_room_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/atSymbol"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="Search users"
        app:searchIcon="@drawable/ic_search_32" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_room_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/chat_room_msg_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chat_room_back_btn" />

    <EditText
        android:id="@+id/chat_room_msg_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:backgroundTint="@color/colorPrimary"
        android:cursorVisible="true"
        android:hint="@string/enter_message"
        android:inputType="text|textMultiLine"
        android:textColor="@color/colorSecondaryLight"
        android:textColorHint="@color/colorSecondaryDark"
        android:textCursorDrawable="@drawable/color_cursor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chat_room_send_msg_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        tools:ignore="Autofill" />

    <ImageButton
        android:id="@+id/chat_room_send_msg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@null"
        android:contentDescription="@string/this_is_the_send_message_button"
        android:src="@drawable/ic_send_msg_32"
        app:layout_constraintBottom_toBottomOf="@+id/chat_room_msg_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chat_room_msg_et"
        app:layout_constraintTop_toTopOf="@+id/chat_room_msg_et" />


</androidx.constraintlayout.widget.ConstraintLayout>