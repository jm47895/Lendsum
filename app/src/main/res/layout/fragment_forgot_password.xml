<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondaryLight"
    tools:context="com.lendsumapp.lendsum.ui.ForgotPasswordFragment">

    <!--Password reset code xml-->
    <EditText
        android:id="@+id/forgot_email_et"
        style="@style/EditTextTheme"
        android:hint="@string/enter_email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/forgot_send_reset_pass_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="Autofill"/>

    <Button
        android:id="@+id/forgot_send_reset_pass_btn"
        style="@style/ButtonTheme"
        android:text="@string/send_password_reset_email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_email_et" />



    <!--End password reset code xml-->




</androidx.constraintlayout.widget.ConstraintLayout>