<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorSecondaryLight"
    tools:context="com.lendsumapp.lendsum.ui.FinancialInfoFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the bank information fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/financial_info_back_btn"
        style="@style/ButtonTheme"
        android:layout_width="0dp"
        android:text="@string/cap_back"
        app:layout_constraintEnd_toStartOf="@+id/financial_info_next_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"/>

    <Button
        android:id="@+id/financial_info_next_btn"
        style="@style/ButtonTheme"
        android:layout_width="0dp"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="@+id/financial_info_back_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/financial_info_back_btn"
        app:layout_constraintTop_toTopOf="@+id/financial_info_back_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>